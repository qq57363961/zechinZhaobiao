/* pages/detail/detail.wxss */
/* 背景颜色 */
page {
  background: #f3f3f3;
}
/* 页面触摸水波纹效果 */

.ripple {
    background-color:aquamarine;
    border-radius: 100%;
    height:5rpx;
    width:5rpx;
    margin-top: -90px;
    position: absolute;
    overflow: hidden;
    z-index: 10;
}
@-webkit-keyframes ripple {
    100% {
    webkit-transform: scale(50);
    transform: scale(50);
    background-color: transparent;
    }
}

.banner{
  display: block;
  width: 100%;
}
/* 设置轮播图图片高度为350 */
swiper{
  height: 350rpx;
}

/* 招标类别外包裹 */
.zblbView{
  width: 95%;
  background: #f6f6f6;
  border-radius: 3%;
  margin:20rpx auto;
  box-shadow: 2rpx 2rpx 2rpx #888888;
}

.weui-grids {
    position: relative;
    overflow: hidden;
}
 
 .weui-grids:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1rpx;
    border-top: 1rpx solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
} 
 
 .weui-grids:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1rpx;
    bottom: 0;
    border-left: 1rpx solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
} 
 
.weui-grid {
    position: relative;
    float: left;
    padding: 50rpx 40rpx;
    width: 50%;
    box-sizing: border-box;
}
 
 .weui-grid:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1rpx;
    bottom: 0;
    border-right: 1rpx solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 100% 0;
    transform-origin: 100% 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
} 
 
 .weui-grid:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1rpx;
    border-bottom: 1rpx solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
} 
 
  .weui-grid:active {
    background-color: #ECECEC;
}  
 
.weui-grid__bg {
    position: relative;
    float: left;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
}
 
.weui-grid__icon {
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
}
 
 
.weui-grid__icon image {
    display: block;
    width: 100%;
    height: 100%;
}

.weui-grid__icon .count{
  position: absolute;
  top: 0;
  right: 0;
  font-weight: normal;
  font-size: 30rpx;
  background: #CF3348;
  padding: 5rpx;
  border-radius: 50%;
  color: #FFF;
}
 
.weui-grid__icon + .weui-grid__label {
    margin-top: 5rpx;
}
 
 
.weui-grid__label {
    display: block;
    text-align: center;
    font-weight: bold;
    color: #000;
    font-size: 30rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}