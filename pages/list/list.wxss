/* pages/list/list.wxss */
/* 背景颜色 */
page {
  background: #f3f3f3;
  height: 100%;
}
.swiper-tab {  
  display: flex;  
  justify-content: space-around;
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #777;  
}  
.tab-item {   
  text-align: center;  
  font-size: 30rpx;  
  color: #777;  
}  
.swiper {  
  height: 1000rpx;  
  background: #fff;  
}  
.on {  
  color: blue;  
  border-bottom: 5rpx solid blue;  
} 

/* 列表内容 */
.item-list{
  height: 1100rpx;
}
.detailItem{
  overflow: hidden;
  padding: 5rpx 20rpx;
  border-bottom: 2px dotted #ddd;
}
.title{
  font-size: 30rpx;
  font-weight: 700;
  color: #008BFB;
}
.subTitle{
  font-size: 28rpx;
  color: #666;
}
.up_down image{
  width: 40rpx;
}
/* 招标详细信息列表 */
.ifb-detail-list{
  display: inline-block;
  width: 90%;
  color:#666;
  margin: 10rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.3;
}
/* 招标信息时间显示footer */
.ifb-footer{
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #A0522D;
}
/* 添加一条分割线 */
.divLine_90{
  background: #E0E3DA;
  width: 90%;
  height: 2rpx;
  margin: auto;
}
.divLine_95{
  background: #E0E3DA;
  width: 95%;
  height: 2rpx;
  margin: auto;
}
.toubiao{
  margin-left: 100rpx;
  font-size: 25rpx !important;
  margin-top: 10rpx;
}