/* pages/user/user.wxss */

/* 页面背景颜色 */
page {
  background: #f3f3f3;
}

/* 顶部背景图片 */
.banner{
  display: block;
  width: 100%;
  position: absolute;
}

/* 登录、注册部分 */
.login{
  width: 90%;
  height: 350rpx;
  background: white;
  position: absolute;
  top: 60rpx;
  left: 5%;
  border: 1rpx solid #DEDEDE;
  box-shadow: 6rpx 6rpx 6rpx #888888;
  border-radius: 5%;
}

/* 头像的外层包裹，没有登录前把它设成圆形 */
.imgBlock1{
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  display: block;
  width: 115rpx;
  height: 115rpx;
  border: 4rpx solid #696969;
  border-radius: 50%;
}
.login>.imgBlock1>image{
  width: 100rpx;
  margin-left: 6rpx;
}
/* 头像的外层包裹，登录后显示头像，外层包裹无边框 */
.imgBlock2{
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  display: block;
}
.login>.imgBlock2>image{
  width: 120rpx;
  margin-left: 6rpx;
}
.userinfo-nickname{
  position: absolute;
  top: 30rpx;
  left: 165rpx;
  font-weight: normal;
  font-size: 36rpx;
}

/* 授权登录 */
.shouquan{
  position: absolute;
  top: 60rpx;
  left: 185rpx;
  font-weight: normal;
  font-size: 36rpx !important;
  background: #fff;
}

/* 我的投标，我的收藏：弹性布局 */
.jilu{
  display: flex;
  justify-content: space-around;
  margin-top: 200rpx;
  font-size: 34rpx;
}
/* 让数字居中 */
.jilu view view:first-child{
  padding-left: 58rpx;
}