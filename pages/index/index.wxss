/* 列表数字外面的圆圈,圆圈和数字都垂直居中 */
.itemLogo image{
  position: absolute;
  width: 70rpx;
  top: 50%;
  margin-top: -35rpx;
  left: 2rpx;
}
/* 列表圆圈里面数字 */
.no27rpx{
  position: absolute;
  top: 50%;
  margin-top: -25rpx;
  left: 27rpx;
  font-size: 30rpx;
}
.no17rpx{
  position: absolute;
  top: 50%;
  margin-top: -25rpx;
  left: 17rpx;
  font-size: 30rpx;
}

/* 向右的箭头，垂直居中 */
.linkToDetail{
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -25rpx;
  width: 50rpx;
}

/* 主标题 */
.title{
  font-size: 30rpx;
  font-weight: 700;
  color: #008BFB;
  margin: 20rpx 0 10rpx 100rpx;
}
/* 副标题 */
.subTitle{
  width: 75%;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  margin-left: 100rpx;
}