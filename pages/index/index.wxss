/**index.wxss**/
/* pages/about/about.wxss */
/* 背景颜色 */
page {
  background: #f3f3f3;
  height: 100%;
}
/* 页面触摸水波纹效果 */

.ripple {
    background-color:aquamarine;
    border-radius: 100%;
    height:5rpx;
    width:5rpx;
    margin-top: -90px;
    position: absolute;
    overflow: hidden;
    z-index: 10;
}
@-webkit-keyframes ripple {
    100% {
    webkit-transform: scale(50);
    transform: scale(50);
    background-color: transparent;
    }
}
.banner{
  display: block;
  width: 100%;
}
/* 设置轮播图图片高度为350 */
swiper{
  height: 350rpx;
}
.info image{
  width: 250rpx;
  display: block;
  margin: auto;
}
/* 分割线 */
.Line90{
  background: #E0E3DA;
  width: 90%;
  height: 2rpx;
  margin: auto;
}
.info,.zhaobiaoList{
  background: #FFF;
  margin-top: 15rpx;
}
.guanyuwomen,.zuixinzhaobiao{
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #2E5E86;
  background-image: -webkit-radial-gradient(top, circle cover, #83abcd 0%, #ddeffd 80%);
  background-image: -moz-radial-gradient(top, circle cover, #83abcd 0%, #ddeffd 80%);
  background-image: -o-radial-gradient(top, circle cover, #83abcd 0%, #ddeffd 80%);
  background-image: radial-gradient(top, circle cover, #83abcd 0%, #ddeffd 80%);
  padding: 10rpx 20rpx;
  text-indent: 40rpx;
}
/* 关于我们前面的标识 */
.guanyuwomen::after,.zuixinzhaobiao::after{
  position: absolute;
  left: 20rpx;
  top: 18rpx;
  content: "";
  width: 10rpx;
  height: 34rpx;
  background: #2e5e86;
}
/* 关于我们文字详细内容 */
.cmty-desc {
  line-height: 1.6;
  padding: 0 30rpx 10rpx;
  font-size: 30rpx;
  color: #666;
  /* 关键属性 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 结尾以省略号显示 */
  text-overflow: ellipsis;
  overflow: hidden;
  text-indent: 60rpx;
}
.fold {
  /* 设置折叠之后显示的行数 */
  -webkit-line-clamp: 3;
}
.unfold {
  -webkit-line-clamp: 0;
}
.view-all-layout {
  width: 100%;
  position: relative;
}
.view-all {
  position: absolute;
  left: 25rpx;
  font-size: 30rpx;
  color: #308CFB;
  padding: 5rpx;
}
/* 最新招标部分 */
.mt50{
  margin-top: 50rpx;
}
/* 最新招标数量 */
.zbLength{
  color: #3CB371;
  font-size: 30rpx;
}
.zuixinzhaobiao image{
  width: 35rpx;
  margin-left: 15rpx;
}
.guanyuwomen image{
  position: absolute;
  width: 48rpx;
  top: 12rpx;
  left: 220rpx;
}

/* 滑动区域 */
.scroll{
  height: 650rpx;
}

/* 列表主体 */
.listItem{
  position: relative;
  width: 90%;
  margin: auto;
}
